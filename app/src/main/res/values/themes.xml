<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PawsHubAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Background's Colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white_elevated</item>
        <item name="colorSurfaceContainer">@color/white_elevated_2</item>


        <!-- Status' Colors -->
        <item name="android:statusBarColor">@color/white_elevated</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation's Colors -->
        <item name="android:navigationBarColor">@color/white_elevated</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">#007BC7</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#9DCAE6</item>
        <item name="colorOnPrimaryContainer">#002033</item>

        <item name="colorSecondary">#3B5464</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#C8DAE6</item>
        <item name="colorOnSecondaryContainer">#1E2B33</item>

        <item name="colorTertiary">#3B5464</item>
        <item name="colorOnTertiary">#FFFFFF</item>
        <item name="colorTertiaryContainer">#C8DAE6</item>
        <item name="colorOnTertiaryContainer">#1E2B33</item>
    </style>

    <style name="Theme.PawsHubAndroid.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="Theme.PawsHubAndroid" parent="Base.Theme.PawsHubAndroid" />

    <style name="Theme.PawsHubAndroid.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PawsHubAndroid.BottomNavigation</item>
    </style>

    <style name="ThemeOverlay.PawsHubAndroid.BottomNavigation" parent="">
        <item name="colorSecondaryContainer">@color/white_elevated_2</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="strokeWidth">10dp</item>
        <item name="strokeColor">@color/white_elevated_3</item>
    </style>

    <style name="Theme.PawsHubAndroid.BottomNavigation.Stroke">
        <item name="backgroundColor">@color/white_elevated_2</item>
    </style>
</resources>