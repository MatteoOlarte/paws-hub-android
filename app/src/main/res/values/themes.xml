<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PawsHubAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Theme Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- System Colors -->
        <item name="android:statusBarColor">@color/md_theme_light_surfaceVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/md_theme_light_background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.PawsHubAndroid" parent="Base.Theme.PawsHubAndroid" />

    <style name="Theme.PawsHubAndroid.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.PawsHubAndroid.BottomNavigation</item>
    </style>

    <style name="Theme.PawsHubAndroid.Toolbar.SurfaceVariant" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_surfaceVariant</item>
    </style>

    <style name="ThemeOverlay.PawsHubAndroid.BottomNavigation" parent="">
        <item name="colorSurfaceContainer">@color/md_theme_light_background</item>
        <item name="colorPrimary">@color/md_theme_light_background</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurfaceContainerHighest">?attr/colorTertiaryContainer</item>
    </style>

    <style name="Theme.PawsHubAndroid.CollapsingToolbar.Large" parent="Widget.Material3.CollapsingToolbar.Large">
        <item name="android:background">@color/md_theme_light_surface</item>
    </style>

    <style
        name="ThemeOverlay.PawsHubAndroid.AlertDialog"
        parent="ThemeOverlay.Material3.MaterialAlertDialog"
        >
        <item name="colorSurfaceContainerHigh">?attr/colorSurfaceVariant</item>
        <item name="alertDialogStyle">
            @style/MaterialAlertDialog.PawsHubAndroid
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.PawsHubAndroid.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.PawsHubAndroid.Dialog.PositiveButtonStyle
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.PawsHubAndroid.Dialog.NegativeButtonStyle
        </item>
    </style>

    <style name="MaterialAlertDialog.PawsHubAndroid" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.PawsHubAndroid.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.PawsHubAndroid.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialog.PawsHubAndroid.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PawsHubAndroid.Dialog.PositiveButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">
            @style/ShapeAppearance.PawsHubAndroid.DialogButton
        </item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="Widget.PawsHubAndroid.Dialog.NegativeButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">
            @style/ShapeAppearance.PawsHubAndroid.DialogButton
        </item>
    </style>

    <style name="ShapeAppearance.PawsHubAndroid.DialogButton" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>